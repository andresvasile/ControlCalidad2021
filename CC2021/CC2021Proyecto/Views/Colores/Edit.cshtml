@model CC2021Proyecto.ValidationClass.ColorValidation
<div class="container " style="color:floralwhite">
    <h1 style="color:floralwhite">Colores</h1>
    <div class="app d-flex flex-column justify-content-center">
        <form asp-action="Update" method="post" class="form-group d-flex flex-column align-items-center">
            <div asp-validation-summary="All"></div>
            <div class="form-floating mb-4 w-25">
                <label asp-for="Codigo">Codigo</label>
                <input asp-for="Codigo" class="form-control">@Model.Codigo
                <span asp-validation-for="Codigo" class="danger"></span>
            </div>
            <br/>
            <br/>
            <div class="form-floating w-100">
                <label asp-for="Descripcion">Descripcion</label>
                <textarea asp-for="Descripcion" class="form-control" style="height: 100px" placeholder="" id="floatingTextarea">@Model.Descripcion</textarea>
                <span asp-validation-for="Descripcion" class="danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" asp-controller="Colores" type="button" class="btn btn-secondary form-cotrol">Cerrar</a>
            </div>

        </form>
    </div>
</div>