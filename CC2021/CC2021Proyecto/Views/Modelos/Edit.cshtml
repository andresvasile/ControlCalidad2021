@model CC2021Proyecto.ValidationClass.ModeloValidation
<div class="container">
    <h1>Colores</h1>
    <div class="app d-flex flex-column justify-content-center">
        <form asp-action="Update" method="post" class="form-group d-flex flex-column align-items-center">
            <div asp-validation-summary="All"></div>

            <div class="form-floating mb-4 w-25">
                <label asp-for="Sku">Sku</label>
                <input asp-for="Sku" class="form-control">
                <span asp-validation-for="Sku" class="danger"></span>
            </div>
            <div class="form-floating mb-4 w-25">
                <label asp-for="Objetivo">Objetivo</label>
                <input asp-for="Objetivo" class="form-control">
                <span asp-validation-for="Objetivo" class="danger"></span>
            </div>
            <br />
            <div class="form-floating w-100">
                <label asp-for="Denominacion">Denominacion</label>
                <textarea asp-for="Denominacion" class="form-control" style="height: 100px" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <span asp-validation-for="Denominacion" class="danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-action="Index" asp-controller="Colores" type="button" class="btn btn-secondary form-cotrol">Cerrar</a>
            </div>

        </form>
    </div>
</div>