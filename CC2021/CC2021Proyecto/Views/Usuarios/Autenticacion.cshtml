@model CC2021Proyecto.ValidationClass.UsuarioValidation
<!-- Login -->
<div class="container mt-5">
    <form asp-action="Autenticacion" method="post" class="form-group text-center">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row mt-3">
            <div class="col"></div>
            <div class="col">
                <label asp-for="User">Usuario</label>
                <input asp-for="User" type='text' class='form-control w-1'>
                <span asp-validation-for="User" class="danger"></span>
            </div>
            <div class="col"></div>
        </div>

        <div class="row mt-3">
            <div class="col"></div>
            <div class="col">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type='password' class='form-control w-1'>
                <span asp-validation-for="Password" class="danger"></span>
            </div>
            <div class="col"></div>
        </div>

        <div class="row mt-4">
            <div class="col"></div>
            <div class="col">
                <div class="form-group">
                    <button type="submit" class='btn btn-primary btn-block'>Ingresar</button>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </form>
</div>